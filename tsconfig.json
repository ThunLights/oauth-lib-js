{
	"compilerOptions": {
		"target": "ESNext",
		"declaration": true,
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"outDir": "dist"
	},
	"include": ["src/*"]
}
